@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Ideas</title>
    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/site")
    @Scripts.Render("~/Scripts/bootstrap")
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm text-light navbar-light">
            <a class="navbar-brand" href="#">Ideas</a>


            <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavBar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavBar">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a href="/home/index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home/about" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home/contact" class="nav-link">Contact</a>
                    </li>

                    @if (Session["CurrentUserName"] == null)
                    {
                        <li class="nav-item">
                            <a href="/accounts/login" class="nav-link">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="/accounts/register" class="nav-link">Register</a>
                        </li>
                    }

                    @if (Session["CurrentUserName"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                                <img src="~/Images/user.png" width="20px" alt="Alternate Text" />
                                @Session["CurrentUserName"]
                            </a>
                            <div class="dropdown-menu bg-info">
                                <a href="/accounts/logout" class="dropdown-item">Logout</a>
                                <a href="/accounts/changeprofile/@Session["CurrentUserID"]" class="dropdown-item">Change Profile</a>
                                <a href="/account/changepassword" class="dropdown-item">Change Password</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            <form class="form-inline" action="/home/search" method="post">
                <input type="search" class="form-control mr-sm-2" style="width:150px" placeholder="Search" name="str" />
                <button class="btn btn-success">Search</button>
            </form>

        </nav>

        @RenderBody()

    </div>

</body>
</html>
