@model IEnumerable<_1640_Project.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Comment</h2>

<p>
    @Html.ActionLink("Make a comment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.CommentDate)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.IdeaID)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.VotesCount)
            </th>
            <th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content) at @Html.DisplayFor(modelItem => item.CommentDate) <br />
                @Html.DisplayFor(modelItem => item.VotesCount) likes <br />
                @Html.ActionLink("Like", "Like", new { id = item.CommentID })
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.CommentDate)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.IdeaID)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.VotesCount)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CommentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CommentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CommentID })
            </td>
        </tr>
    }

</table>


