@model List<_1640_Project.Models.Submission>
@{
    ViewBag.Title = "Down Data";
}

<div class="w3-container" style="padding:50px 16px">

    <h1>Please choose submissions to download excel file!!!</h1>

    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/Down/Down/@item.SubmissionID">@item.SubmissionName</a>
                </td>
            </tr>
        }

    </table>
    
    <form action="/down/downloadzip" method="post">
        <button class="btn btn-outline-info" type="submit">Down All Ideas in System as Zip file</button>
    </form>

</div>